{{>layout/header}}
<div class="col-md-12 text-center m-2">
	<h1>신규 수업 등록</h1>
</div>
<div class="col-md-12">
    <div class="col-md-12 text-center">
        <form>
            <div class="form-group row">
                <label for="name" class="col-sm-2 col-form-label">수업이름</label>
                <div class="col-sm-8">
                	<input type="text" class="form-control lesson-save-form" id="lessonName" placeholder="이름을 입력해주세요">
                </div>
            </div>
			<div class="form-group row">
                <label for="role" class="col-sm-2 col-form-label">수업유형</label>
                <div class="col-sm-7">
	                <select class="form-control lesson-save-form" aria-label="Default select example" id="lessonType">
					  <option selected value="">선택</option>
					   {{#lessonTypeList}}
					  	<option value="{{code.code}}">{{codeName}}</option>
					   {{/lessonTypeList}}
					</select>
				</div>
            </div>
            <div class="form-group row">
                <label for="name" class="col-sm-2 col-form-label">수업정원</label>
                <div class="col-sm-6">
                	<input type="text" class="form-control lesson-save-form" id="lessonMaxNum" placeholder="수업정원을 입력해주세요">
                </div>
                <div class="col-sm-1">명</div>
            </div>
            <div class="form-group row">
                <label for="name" class="col-sm-2 col-form-label">수업 교육비</label>
                <div class="col-sm-6">
                	<input type="text" class="form-control lesson-save-form" id="lessonPrice" placeholder="수업 교육비를 입력해주세요">
                </div>
                <div class="col-sm-1">원</div>
            </div>
            <div class="form-group row">
                <label for="sex" class="col-sm-2 col-form-label">사용여부</label>
                <div class="col-sm-8 row">
					<div class="form-check col-sm-4">
					  <input class="form-check-input lesson-save-form" type="radio" name="registLessonDeleteYn" id="deleteYn_N" value="N" checked>
					  <label class="form-check-label" for="N">
					    사용
					  </label>
					 </div>
					 <div class="form-check col-sm-4">
					  <input class="form-check-input lesson-save-form" type="radio" name="registLessonDeleteYn" id="deleteYn_Y" value="Y">
					  <label class="form-check-label" for="Y">
					    미사용
					  </label>
					</div>
				</div>
            </div>
            
        </form>
        <div class="text-center">
			<a href="/" role="button" class="btn btn-secondary">취소</a>
			<button type="button" class="btn btn-primary" id="lessonSaveBtn">등록</button>
        </div>
    </div>
</div>

{{>layout/footer}}